<h1 class="index-title">Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%=link_to 'Show', book_path(book.id) %>
          <%=link_to 'Edit', edit_book_path(book.id) %>
          <a href="">Destroy</a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
<h2 class="form-box-title">New book</h2>
<div class="form-box">
  <%= form_with model: @book,local:true do |f| %>
    <div class="form-title">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>
    <div class="form-body">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>