<h1 class="index-title">Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%=link_to 'Show', book_path(book.id) %>
          <%=link_to 'Edit', edit_book_path(book.id) %>
          <%=link_to 'Destroy',"/books/#{book.id}",method: :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
<h2 class="form-box-title">New book</h2>


<% if @book.errors.any? %>
  <h2>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  </h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="form-box">
  <%= form_with model: @book,local:true do |f| %>
    <div class="form-title">
      <div class="form-error">
        <p>Title</p>
      </div>
      <div class="form-error">
        <%= f.text_field :title %>
      </div>
    </div>
      <div class="form-body">
        <div class="form-error">
          <p>Body</p>
        </div>
        <div class="form-error">
          <%= f.text_area :body %>
        </div>
      </div>
      <%= f.submit 'Create Book' %>
  <% end %>
</div>